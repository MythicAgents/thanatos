{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Thanatos: Check project code formatting",
            "type": "shell",
            "command": "./.github/scripts/checkformat.sh",
            "group": "test",
        },
        {
            "label": "Thanatos: Generate code coverage data",
            "type": "shell",
            "command": "./.github/scripts/coverage.sh",
            "group": "none",
        },
        {
            "label": "Thanatos: Lint project code",
            "type": "shell",
            "command": "./.github/scripts/lint.sh",
            "group": "test",
        },
        {
            "label": "Thanatos: Run tests",
            "type": "shell",
            "command": "./.github/scripts/test.sh",
            "group": {
                "isDefault": true,
                "kind": "test"
            }
        }
    ]
}
